@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.MachineEngineer>;

  
<div class="header">
  <h1>Welcome to the Factory!</h1>
</div>

<div class="row">
  <div class="col-6">
    <h3>Machines</h3>
    @if (@Model.Count == 0)
    {
      <h5>No machines have been added yet!</h5>
    }
    @foreach (MachineEngineer machineEngineer in Model)
    {
      <li><a href='/engineers/details/@machineEngineer.Engineer.EngineerId'>@machineEngineer.Engineer.Name</a></li>
    }

    <p>@Html.ActionLink("See all machines", "Index", "Machines")</p>
    <p>@Html.ActionLink("Add a machines", "Create", "Machines")</p>

  </div>
  <div class="col-6">
    <h3>Engineers</h3>
        @if (@Model.Count == 0)
    {
      <h5>No machines have been added yet!</h5>
    }
    @foreach (MachineEngineer machineEngineer in Model)
    {
      <li><a href='/engineers/details/@machineEngineer.Engineer.EngineerId'>@machineEngineer.Engineer.Name</a></li>
    }
    <p>@Html.ActionLink("See all engineers", "Index", "Engineers")</p>
    <p>@Html.ActionLink("Add an engineer", "Create", "Engineers")</p>
  </div>
</div>

  

 