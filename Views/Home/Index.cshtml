@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Engineer>;
<div class="header">
  <h1>Welcome to the Factory!</h1>
</div>

<div class="row">
  <div class="col-6">
    <h3>Machines</h3>
    

    <p>@Html.ActionLink("See all machines", "Index", "Machines")</p>
    <p>@Html.ActionLink("Add a machines", "Create", "Machines")</p>

  </div>
  <div class="col-6">
    <h3>Engineers</h3>
      @if (Model.Count == 0)
      {
      <h3>No engineers have been added yet!</h3>
      } 

      <ul>
        @foreach(Engineer engineer in Model)
        {
          <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
        }
      </ul>
    <p>@Html.ActionLink("See all engineers", "Index", "Engineers")</p>
    <p>@Html.ActionLink("Add an engineer", "Create", "Engineers")</p>
  </div>
</div>

  

 