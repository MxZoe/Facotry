@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.MachineEngineer


  
<div class="header">
  <h1>Welcome to the Factory!</h1>
</div>

<div class="row">
  <div class="col-6">
    <h3>Machines</h3>
    @if (@Model.MachineId == 0)
    {
      <h3>No machines have been added yet!</h3>
    }
    @foreach (Machine machine in Model.Machine)
    {
      <li>@Html.ActionLink($"{machine.Machine}", "Details", new { id = machineEngineer.MachineId })</li>
    }

    <p>@Html.ActionLink("See all machines", "Index", "Machines")</p>
    <p>@Html.ActionLink("Add a machines", "Create", "Machines")</p>

  </div>
  <div class="col-6">
    <h3>Engineers</h3>
    <p>@Html.ActionLink("See all engineers", "Index", "Engineers")</p>
    <p>@Html.ActionLink("Add an engineer", "Create", "Engineers")</p>
  </div>
</div>

  

 